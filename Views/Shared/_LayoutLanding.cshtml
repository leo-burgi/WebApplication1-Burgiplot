<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - LNB Software</title>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;700&display=swap" rel="stylesheet">
    <!-- CSS base -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true">
    <!-- Específico landing -->
    <link rel="stylesheet" href="~/css/landing.css" asp-append-version="true">

    @RenderSection("Styles", required: false)
</head>

<body>
    <header>
        
        <<nav class="navbar navbar-expand-lg bg-white fixed-top shadow-sm">
            <div class="container">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    <img src="~/images/logoLNB.jpg" alt="LNB Software Logo" height="50"> SOFTWARE
                </a>

                <button class="navbar-toggler glass" type="button" data-bs-toggle="collapse" data-bs-target="#navLand">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div id="navLand" class="collapse navbar-collapse ">
                    <ul class="navbar-nav flex-wrap justify-content-end w-100">
                        <li class="nav-item"><a class="nav-link" href="#beneficios">Beneficios</a></li>
                        <li class="nav-item"><a class="nav-link" href="#demo">Demo</a></li>
                        <li class="nav-item"><a class="nav-link" href="#contratacion">Contratación</a></li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main>
        @RenderBody()
    </main>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <footer class="text-center">
        <small>&copy; @DateTime.Now.Year - L N B. Todos los derechos reservados.</small>
    </footer>
</body>
</html>
