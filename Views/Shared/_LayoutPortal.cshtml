<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Portal</title>

    <!-- CSS base -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true">
    <!-- Específico portal -->
    <link rel="stylesheet" href="~/css/portal.css" asp-append-version="true">

    @RenderSection("Styles", required: false)
</head>

<body>
    <header>

        <nav class="navbar navbar-logo fixed-top shadow-sm">
            <div class="container">
                <a class="navbar-brand d-inline-flex align-items-center"  title="Inicio">
=======

                    <img src="~/images/logo-burgiplot.png" alt="Bürgiplot"
                         class="logo logo-outline">
                </a>
            </div>
        </nav>

        <nav class="navbar navbar-secondary navbar-expand-lg fixed-top ">
            <div class="d-flex justify-content-between container">
                <button class="navbar-toggler glass" type="button" data-bs-toggle="collapse" data-bs-target="#navPortal">

                    <span class="navbar-toggler-icon"></span>
                </button>
                


                    <div id="navPortal" class="collapse navbar-collapse ">
                        <ul class="navbar-nav flex-wrap justify-content-center pe-lg-4">
                            <li class="nav-item"><a class="nav-link" href="#mision">Misión</a></li>
                            <li class="nav-item"><a class="nav-link" href="#vision">Visión</a></li>
                            <li class="nav-item"><a class="nav-link" href="#valores">Valores</a></li>
                            <li class="nav-item"><a class="nav-link" href="#objetivos">Objetivos</a></li>
                            <li class="nav-item"><a class="nav-link" href="#TrabajosRealizados">Trabajos realizados</a></li>
                        </ul>
                        
                    </div>
                    
               
                <div>
                    <a href="#portal-top"></a>


                    <a asp-controller="Clientes" asp-action="Index" class="btn glass btn-success btn-ingresar order-md-2">
                        <i class="bi bi-box-arrow-in-right me-1"></i> Ingresar
                    </a>
                    <a asp-controller="Home" asp-action="Index" class="btn glass btn-danger btn-ingresar order-md-2">
                        <i class="bi bi-box-arrow-in-right me-1"></i> Salir
                    </a>
                </div>

            </div>
        </nav>
        
    </header>
    <main>
        @RenderBody()
    </main>
    <footer class="text-center">
        <small>&copy; @DateTime.Now.Year - L N B. Todos los derechos reservados.</small>
    </footer>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
