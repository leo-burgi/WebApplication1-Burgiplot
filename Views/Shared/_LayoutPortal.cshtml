<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Portal</title>

    <!-- CSS base -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true">
    <!-- Específico portal -->
    <link rel="stylesheet" href="~/css/portal.css" asp-append-version="true">

    @RenderSection("Styles", required: false)
</head>

<body>
    <!-- Barra principal: logo de la empresa compradora -->
    <nav class="navbar bg-white border-bottom shadow-sm">
        <div class="container justify-content-center">
            <a class="navbar-brand fw-bold" asp-controller="Public" asp-action="Portal">
                <img src="~/images/logo-empresa.png" alt="Empresa" style="max-height:64px" />
            </a>
        </div>
    </nav>
    <!-- Barra secundaria: secciones + Ingresar -->
    <nav class="navbar navbar-expand-lg bg-white border-bottom nav-secondary">
        <div class="container">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navPortal">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div id="navPortal" class="collapse navbar-collapse">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item"><a class="nav-link" href="#mision">Misión</a></li>
                    <li class="nav-item"><a class="nav-link" href="#vision">Visión</a></li>
                    <li class="nav-item"><a class="nav-link" href="#valores">Valores</a></li>
                    <li class="nav-item"><a class="nav-link" href="#objetivos">Objetivos</a></li>
                </ul>
                <a asp-controller="Clientes" asp-action="Index" class="btn btn-success btn-ingresar">
                    <i class="bi bi-box-arrow-in-right me-1"></i> Ingresar
                </a>
            </div>
        </div>
    </nav>
    <main>@RenderBody()</main>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
