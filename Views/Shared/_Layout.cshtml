<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Sistema de gestión</title>

    <!-- CSS base -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true">

    @RenderSection("Styles", required: false)
</head>

<body>
    <header>
        <nav class="navbar navbar-logo sticky-top shadow-sm" data-bs-theme="light">
            <div class="container">
                <a class="navbar-brand d-inline-flex align-items-center" href="/Public/Portal" title="Portal">
                    <img src="~/images/logo-burgiplot.png" alt="Bürgiplot"
                         class="logo logo-outline">
                </a>
            </div>
        </nav>

        <!-- Barra secundaria: menú -->
        <nav class="navbar navbar-expand-lg navbar-secondary sticky-top shadow-sm" data-bs-theme="light">
            <div class="container align ">
                <button class="navbar-toggler glass " type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbarSecundario" aria-controls="navbarSecundario"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon "></span>
                </button>

                <div id="navbarSecundario" class="collapse  navbar-collapse justify-content-center">
                    <ul class="navbar-nav flex-wrap justify-content-center w-100">
                        <li class="nav-item btn ">
                            <a class="nav-link text-light" asp-controller="Clientes" asp-action="Index">
                                <i class="bi bi-people-fill"></i> Clientes
                            </a>
                        </li>
                        <li class="nav-item btn ">
                            <a class="nav-link text-light" asp-controller="Ordenes" asp-action="Index">
                                <i class="bi bi-clipboard-check"></i> Órdenes
                            </a>
                        </li>
  
                        <li class="nav-item btn ">
                            <a class="nav-link text-light" asp-controller="Materiales" asp-action="Index">
                                <i class="bi bi-box-seam"></i> Stock
                            </a>
                        </li>
                        <li class="nav-item btn ">
                            <a class="nav-link text-light" asp-controller="Facturacion" asp-action="Index">
                            <i class="bi bi-receipt"></i> Facturación
                        </a>
                        </li>
                        <li class="nav-item btn">
                            <a class="nav-link text-light" asp-controller="Usuarios" asp-action="Index">
                                <i class="bi bi-person-circle"></i> Usuarios
                            </a>
                        </li>
                    </ul>
                    
                </div>
                <a asp-controller="Public" asp-action="Portal" class="btn glass btn-danger btn-ingresar order-md-2">
                    <i class="bi bi-box-arrow-in-right me-1"></i> Salir
                </a>
            </div>
        </nav>
    </header>

    <main class="content-wrapper">
        <div class="text-center my-4">
            <h2 class="fw-bold mt-0">@ViewData["Title"]</h2> 
        </div>
        @RenderBody()
    </main>

    <footer class="text-center">
        <small>&copy; @DateTime.Now.Year - L N B. Todos los derechos reservados.</small>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>