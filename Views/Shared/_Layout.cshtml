<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Burgiplot</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <style>
        :root {
            --verde-burgiplot: #198754;
            --verde-claro: #e9f7ef;
            --gris-boton: #f0f0f0;
        }

        .navbar-main,
        .navbar-secondary {
            background-color: var(--verde-burgiplot);
        }

        .navbar-brand-centered {
            position: absolute;
            left: 50%;
            transform: translateX(-50%);
        }

        .btn-accion {
            font-size: 0.9rem;
            padding: 4px 8px;
            margin: 0 2px;
            border-radius: 6px;
            border: none;
            background-color: var(--gris-boton);
            color: #333;
            transition: background-color 0.2s ease-in-out;
        }

            .btn-accion:hover {
                background-color: #dee2e6;
                cursor: pointer;
            }

        .btn-editar {
            background-color: #0d6efd;
            color: white;
        }

        .btn-eliminar {
            background-color: #dc3545;
            color: white;
        }

        .btn-ver {
            background-color: #20c997;
            color: white;
        }

        .btn-sm {
            font-size: 0.8rem;
            padding: 2px 6px;
        }
    </style>

</head>
<body>
    <header>
        <!-- Barra superior -->
        <nav class="navbar navbar-expand-lg navbar-dark navbar-main py-3 shadow-sm">
            <div class="container position-relative">
                <a class="navbar-brand fw-bold d-flex align-items-center navbar-brand-centered" href="/">
                    <h4>
                        Bürgiplot
                    </h4>
                </a>
            </div>
        </nav>

        <!-- Barra de navegación secundaria -->
        <nav class="navbar navbar-expand-lg navbar-secondary border-bottom shadow-sm sticky-top">
            <div class="container">
                <ul class="navbar-nav flex-row justify-content-center w-100">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-controller="Clientes" asp-action="Index"><i class="bi bi-people-fill"></i> Clientes</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-controller="Ordenes" asp-action="Index"><i class="bi bi-clipboard-check"></i> Órdenes</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-controller="Facturacion" asp-action="Index"><i class="bi bi-receipt"></i> Facturación</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-controller="Materiales" asp-action="Index"><i class="bi bi-box-seam"></i> Stock de Materiales</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-controller="Usuarios" asp-action="Index"><i class="bi bi-person-circle"></i> Usuarios</a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>

    <main class="container mt-4">

        <div class="text-center my-4">
			<h2 class="fw-bold">@ViewData["Title"]</h2>
        </div>
        @RenderBody()
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>