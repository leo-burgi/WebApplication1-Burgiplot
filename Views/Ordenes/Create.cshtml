@model WebApplication1.Models.Orden

@{
    ViewData["Title"] = "Crear Orden";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow rounded-4">
                <div class="hero d-flex align-items-center bg-success text-white py-2 px-3 rounded mb-3 shadow-sm">
                    <i class="bi bi-person-plus-fill fs-4 me-2"></i>
                    <h4 class="mb-0 fw-bold">Crear Orden</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <div class="mb-3">
                            <label asp-for="ClienteId" class="control-label"></label>
                            <select asp-for="ClienteId" class ="form-control" asp-items="ViewBag.ClienteId"></select>
                            <span asp-validation-for="ClienteId" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Observaciones" class="control-label"></label>
                            <input asp-for="Observaciones" class="form-control" />
                            <span asp-validation-for="Observaciones" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Total" class="control-label"></label>
                            <input asp-for="Total" class="form-control" />
                            <span asp-validation-for="Total" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-accion btn-sm">← Volver</a>
                            <button type="submit" class="btn btn-accion btn-sm btn-ver">Guardar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

