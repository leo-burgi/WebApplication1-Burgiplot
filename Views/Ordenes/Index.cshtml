@model IEnumerable<WebApplication1.Models.Orden>

@{
    ViewData["Title"] = "Ordenes de trabajo";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow rounded-4">
                <!-- Encabezado -->
                <div class="hero d-flex align-items-center bg-success text-white py-2 px-3 rounded mb-3 shadow-sm">
                    <i class="bi bi-people-fill fs-4 me-2"></i>
                    <h4 class=mb-0 fw-bold">Listar Ordenes</h4>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <a asp-action="Create" class="btn btn-success">
                            <i class="bi bi-plus-circle"></i> Nueva
                        </a>
                    </div>

                    <div class="card shadow rounded-4">
                        <div class="card-body">
                            <table class="table table-striped table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>@Html.DisplayNameFor(model => model.Id)</th>
                                        <th>@Html.DisplayNameFor(model => model.FechaUtc)</th>
                                        <th>@Html.DisplayNameFor(model => model.Estado)</th>
                                        <th class="d-none d-md-table-cell">@Html.DisplayNameFor(model => model.Observaciones)</th>
                                        <th class ="d-none d-md-table-cell">@Html.DisplayNameFor(model => model.Total)</th>
                                        <th>@Html.DisplayNameFor(model => model.Cliente)</th>
                                        <th class="text-end">Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model) 
                                        {
                                        <tr>
                                            <td>@Html.DisplayFor(modelItem => item.Id)</td>
                                            <td>@Html.DisplayFor(modelItem => item.FechaUtc)</td>
                                            <td>@Html.DisplayFor(modelItem => item.Estado)</td>
                                            <td class="d-none d-md-table-cell">@Html.DisplayFor(modelItem => item.Observaciones)</td>
                                            <td class="d-none d-md-table-cell">@Html.DisplayFor(modelItem => item.Total) </td>
                                            <td>@Html.DisplayFor(modelItem => item.Cliente)</td>
                                            <td class="text-end">
                                                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> 
                                                <a asp-action="Details" asp-route-id="@item.Id">Details</a> 
                                                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                            </td>
                                        </tr>
                                        }
                                    </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>