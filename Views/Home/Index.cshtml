@{
    ViewData["Title"] = "Web corporativa + sistema privado";
}

<section class="hero-landing py-5">
    <div class="container">
        <div class="row align-items-center g-4">
            <div class="col-lg-7">
                <h1 class="display-5 fw-bold mb-3">Unificá tu web y tu sistema</h1>
                <p class="lead mb-4">
                    Portal institucional + sistema privado en un solo dominio. Órdenes, stock, facturación y KPIs.
                </p>
                <ul class="list-unstyled d-flex flex-column gap-2 mb-4" id="beneficios">
                    <li><i class="bi bi-shield-check me-2"></i>Datos en tu propio servidor</li>
                    <li><i class="bi bi-phone me-2"></i>Responsive en todos los dispositivos</li>
                    <li><i class="bi bi-bar-chart-line me-2"></i>KPIs y reportes</li>
                </ul>
                <a asp-controller="Public" asp-action="Portal" class="btn btn-light btn-lg">
                    <i class="bi bi-window me-2"></i> Ver portal
                </a>
            </div>
            <div class="col-lg-5">
                <div class="ratio ratio-16x9 bg-white rounded-4 shadow-sm"></div>
            </div>
        </div>
    </div>
</section>

<section id="demo" class="py-5">
    <div class="container">
        <h2 class="fw-bold mb-3 text-center">Demo</h2>
        <p class="text-secondary text-center mb-4">Mirá cómo luce el panel y las secciones clave.</p>
        <div class="row row-cols-1 row-cols-md-3 g-3">
            <div class="col"><img src="~/images/demo1.jpg" class="img-cover" alt="Demo 1"></div>
            <div class="col"><img src="~/images/demo2.jpg" class="img-cover" alt="Demo 2"></div>
            <div class="col"><img src="~/images/demo3.jpg" class="img-cover" alt="Demo 3"></div>
        </div>
        <div class="text-center mt-4">
            <a asp-controller="Public" asp-action="Portal" class="btn btn-success btn-lg">
                Ir al portal
            </a>
        </div>
    </div>
</section>

<section id="contratacion" class="bg-body-tertiary py-5">
    <div class="container">
        <h2 class="fw-bold mb-3 text-center">Formas de contratación y pago</h2>
        <div class="row row-cols-1 row-cols-md-3 g-3">
            <div class="col">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">Plan Inicial</h5>
                        <p>Setup + hosting básico. Soporte por email.</p>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">Plan PyME</h5>
                        <p>Incluye KPIs y prioridades de soporte.</p>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">A medida</h5>
                        <p>Flujos y reportes personalizados.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
