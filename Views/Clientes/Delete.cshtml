@model WebApplication1.Models.Cliente

@{
    ViewData["Title"] = "Borrar un Cliente";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="d-flex align-items-center bg-success text-white py-2 px-3 rounded mb-3 shadow-sm">
                <i class="bi bi-person-x-fill fs-4 me-2"></i>
                <h4 class="mb-0 fw-bold">Eliminar Cliente</h4>
            </div>

            <div class="card shadow rounded-4">
                <div class="card-body">
                    <h5 class="mb-4 text-danger">¿Estás seguro que querés eliminar este cliente?</h5>

                    <dl class="row">
                        <dt class="col-sm-3">Nombre</dt>
                        <dd class="col-sm-9">@Model.Nombre</dd>

                        <dt class="col-sm-3">Dirección</dt>
                        <dd class="col-sm-9">@Model.Dirección</dd>

                        <dt class="col-sm-3">Teléfono</dt>
                        <dd class="col-sm-9">@Model.Telefono</dd>

                        <dt class="col-sm-3">Correo</dt>
                        <dd class="col-sm-9">@Model.Correo</dd>

                        <dt class="col-sm-3">DNI</dt>
                        <dd class="col-sm-9">@Model.DNI</dd>
                    </dl>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="IDCliente" />
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-secondary">← Volver</a>
                            <input type="submit" value="Eliminar" class="btn btn-danger" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
