@model IEnumerable<WebApplication1.Models.Cliente>

@{
    ViewData["Title"] = "Ver Clientes";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow rounded-4">
                    <!-- Encabezado -->
                    <div class="hero d-flex align-items-center bg-success text-white py-2 px-3 rounded mb-3 shadow-sm">
                        <i class="bi bi-people-fill fs-4 me-2"></i>
                        <h4 class=mb-0 fw-bold">Listar Clientes</h4>
                    </div>

                   
                <div class="card-body ">
                    <div class="d-flex align-items-center justify-content-between mb-3 flex-wrap gap-2">
                        <!-- Botón crear -->
                        <a asp-action="Create" class="btn glass text-success btn-outline-light">
                            <i class="bi bi-plus-circle"></i> Crear nuevo
                        </a>
                         <!-- Barra de búsqueda -->
                        <form asp-action="Index" method="get" class="d-flex align-items-center flex-grow-1">
                            <div class="input-group" style="max-width: auto;">
                                <input type="text" name="searchString" class="form-control glass me-2 flex-grow-1" 
                                        placeholder="Buscar por nombre, apellido o dirección" 
                                        value="@ViewData["CurrentFilter"]" />
                                <button type="submit" class="btn glass text-success btn-outline-light">
                                    <i class="bi bi-search"></i> Buscar
                                </button>
                                </div>
                        </form>
                    </div>
                    <!-- Tabla -->
                    <div class="card shadow rounded-4">
                        <div class="card-body">
                            <table class="table table-striped table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>@Html.DisplayNameFor(model => model.Nombre)</th>
                                        <th>@Html.DisplayNameFor(model => model.Apellido)</th>
                                        <th>@Html.DisplayNameFor(model => model.Dirección)</th>
                                        <th>@Html.DisplayNameFor(model => model.Telefono)</th>
                                        <th class="d-none d-md-table-cell">@Html.DisplayNameFor(model => model.Correo)</th>
                                        <th class="d-none d-md-table-cell">@Html.DisplayNameFor(model => model.DNI)</th>
                                        <th class="d-none d-md-table-cell">@Html.DisplayNameFor(model => model.CUIT_CUIL)</th>
                                        <th class="text-end">Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Apellido)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Dirección)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Telefono)</td>
                                        <td class="d-none d-md-table-cell">@Html.DisplayFor(modelItem => item.Correo)</td>
                                        <td class="d-none d-md-table-cell">@Html.DisplayFor(modelItem => item.DNI)</td>
                                        <td class="d-none d-md-table-cell">@Html.DisplayFor(modelItem => item.CUIT_CUIL)</td>
                                        <td class="text-end">
                                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-accion btn-editar btn-sm me-1">Editar</a>
                                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-accion btn-ver btn-sm me-1">Detalles</a>
                                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-accion btn-eliminar btn-sm">Eliminar</a>
                                        </td>
                                    </tr>
                                }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

